{
    "ansible": {
        "host": "localhost",
        "port": 60022,
        "user": "root",
        "inventory": ["127.0.0.1"],
        "playbook": "ansible/plays/main.yml"
    },
    "disk": {
        "device": "/dev/vda",
        "size": "20GiB",
        "partitions": [
            {
                "type": "efi",
                "start": "1MiB",
                "end": "450MiB",
                "number": "1",
                "unit": "GiB"
            },
            {
                "type": "swap",
                "start": "450MiB",
                "end": "1GiB",
                "number": "2",
                "unit": "GiB"
            },
            {
                "type": "general",
                "start": "1GiB",
                "end": "100%",
                "number": "3",
                "unit": "GiB",
                "fs": "ext4"
            }
        ]
    },
    "root_password": "password",
    "hostname": "my-server",
    "locale": "en_US.UTF-8",
    "users": [
        {
            "username": "user1",
            "password": "password1",
            "groups": ["sudo", "users"],
            "shell": "/bin/bash"
        },
        {
            "username": "user2",
            "password": "password2",
            "groups": ["users"],
            "shell": "/bin/bash"
        }
    ],
    "packages": ["vim", "git", "python3"]
}